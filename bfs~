//To use this function define a macro called SIZE
//Pass the adjacency matrix, visited array, source, number of vertices as parameters

void bfs(int adj[][SIZE], int *vis, int u, int n){
	queue<int > q;
	q.push(u);
	vis[u]=1;
	while(!q.empty()){
		int s;
		s=q.front();
		q.pop();
		//cout<<"\nVisited "<<s; 
		//process u
		for(int v=0; v<n; v++)
			if(adj[s][v] && !vis[v]){
				vis[v]=1;
				q.push(v);
			}
	}
}
